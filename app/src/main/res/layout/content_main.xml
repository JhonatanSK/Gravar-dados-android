<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="223dp"
            android:layout_height="46dp"
            android:text="Gravando dados"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="96dp" android:layout_marginEnd="104dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp" android:id="@+id/textView" android:textSize="30sp"
            android:textColor="@android:color/background_dark"/>
    <EditText
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edt_texto"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="36dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="37dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintHorizontal_bias="1.0"
            android:hint="Digite um dado"/>
    <Button
            android:text="Gravar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_gravar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="285dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="38dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/txv_resultado" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_texto"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="371dp"
            android:id="@+id/txv_resultado" android:layout_marginEnd="45dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="35dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="43dp"
            android:textAlignment="center" android:textSize="30sp"/>

</android.support.constraint.ConstraintLayout>